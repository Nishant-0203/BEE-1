    });

    function addMessage(sender, msg) {
      const div = document.createElement("div");
      div.className = sender === "user"
        ? "mb-2 p-3 rounded bg-indigo-100 text-indigo-800 text-right"
        : "mb-2 p-3 rounded bg-gray-200 text-gray-800";
      div.textContent = msg;
      chatBox.appendChild(div);
      chatBox.scrollTop = chatBox.scrollHeight;
    }

    function getBotReply(msg) {
      return responses[msg] || "ðŸ¤– Sorry, I didn't understand that. Try asking about features, login, notes, or settings!";
